{
  "routes": [
    {
      "route": "/api/*",
      "allowedRoles": ["authenticated", "anonymous"]
    },
    {
      "route": "/profile.html",
      "allowedRoles": ["authenticated"],
      "statusCode": 200,
      "serve": "/profile.html"
    },
    {
      "route": "/movie-details.html",
      "allowedRoles": ["authenticated", "anonymous"],
      "statusCode": 200,
      "serve": "/movie-details.html" 
    },
    {
      "route": "/*",
      "serve": "/index.html",
      "statusCode": 200
    }
  ],
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": [
      "/images/*.{png,jpg,gif,svg}",
      "/css/*",
      "/js/*",
      "/assets/*", 
      "/api/*",
      "/*.{css,js,png,jpg,gif,svg,ico,woff,woff2,ttf,eot}",
      "/favicon.ico",
      "/robots.txt"
    ]
  },
  "responseOverrides": {
    "401": {
      "redirect": "/.auth/login/aad",
      "statusCode": 302
    },
    "403": {
      "redirect": "/",
      "statusCode": 302
    },
    "404": {
      "rewrite": "/index.html",
      "statusCode": 200
    }
  }
}