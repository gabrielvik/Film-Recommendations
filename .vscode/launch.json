{
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (web)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/FilmRecomendations.WebApi/bin/Debug/net9.0/FilmRecomendations.WebApi.dll",
            "args": [],
            "cwd": "${workspaceFolder}/FilmRecomendations.WebApi",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        },        {
            "name": "Frontend Launch (Old)",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "dev"
            ],
            "cwd": "${workspaceFolder}/FilmRecommendations.Frontend",
            "console": "integratedTerminal"
        },
        {
            "name": "React Frontend Launch",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "dev"
            ],
            "cwd": "${workspaceFolder}/cinematiq-frontend",
            "console": "integratedTerminal",
            "serverReadyAction": {
                "pattern": "Local:.+(https?://localhost:[0-9]+)",
                "uriFormat": "%s",
                "action": "openExternally"
            }
        }    ],
    "compounds": [
        {
            "name": "Run Backend and Frontend",
            "configurations": [
                ".NET Core Launch (web)",
                "Frontend Launch (Old)"
            ]
        },
        {
            "name": "Run Backend and React Frontend",
            "configurations": [
                ".NET Core Launch (web)",
                "React Frontend Launch"
            ]
        }
    ]
}